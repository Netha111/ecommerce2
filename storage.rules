rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Images folder - users can only access their own images
    match /images/{folder}/{userId}/{imageId} {
      // Allow read/write only to the owner of the images
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Additional validation for uploads
      allow create: if request.auth != null && 
        request.auth.uid == userId &&
        // File size limit: 10MB
        request.resource.size < 10 * 1024 * 1024 &&
        // Only allow image files
        request.resource.contentType.matches('image/.*');
    }
    
    // Temporary uploads folder (for processing)
    match /temp/{userId}/{imageId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && 
        request.auth.uid == userId &&
        request.resource.size < 10 * 1024 * 1024 &&
        request.resource.contentType.matches('image/.*');
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
